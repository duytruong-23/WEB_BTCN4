<form action="/product/add?CatID={{CatID}}" method="post">
    <div class="mb-3 mt-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
    </div>

    <div class="mb-3 mt-3">
        <label for="TinyDes" class="form-label">Tiny description:</label>
        <input type="text" class="form-control" id="TinyDes" placeholder="Enter tiny description" name="TinyDes">
    </div>

    <div class="mb-3 mt-3">
        <label for="FullDes" class="form-label">Full description:</label>
        <input type="text" class="form-control" id="FullDes" placeholder="Enter full description" name="FullDes">
    </div>

    <div class="mb-3 mt-3">
        <label for="Price" class="form-label">Price:</label>
        <input type="number" class="form-control" id="Price" placeholder="Enter price" name="Price">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>